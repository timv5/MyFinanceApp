<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <TextView
                android:id="@+id/text_view_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Price"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/text_view_title7" />

        <TextView
                android:id="@+id/price_result"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="price_result"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="35dp"
                android:layout_toEndOf="@+id/text_view_title"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/price_diff_result" />

        <TextView
                android:id="@+id/text_view_title7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Exchange"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/text_view_title5" />

        <TextView
                android:id="@+id/price_diff_result"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="exchange_result"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="35dp"
                android:layout_toEndOf="@+id/text_view_title"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/low_result" />

        <TextView
                android:id="@+id/text_view_title5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Currency"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/text_view_title" />

        <TextView
                android:id="@+id/low_result"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="currency_result"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="35dp"
                android:layout_toEndOf="@+id/text_view_title"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/high_result" />

        <TextView
                android:id="@+id/text_view_title4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Symbol"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="20dp" />

        <TextView
                android:id="@+id/symbol_result"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="symbol_result"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="35dp"
                android:layout_toEndOf="@+id/text_view_title"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />

        <TextView
                android:id="@+id/high_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="name_result"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="35dp"
                android:layout_toEndOf="@+id/text_view_title"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/symbol_result" />

        <TextView
                android:id="@+id/text_view_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/text_view_title4" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>